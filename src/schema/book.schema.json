{
  "$id": "https://github.com/henry-jewell/library-inventory/book.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Book",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier"
    },
    "title": {
      "type": "string",
      "description": "The book's title",
      "maxLength": 500,
      "minLength": 1
    },
    "author": {
      "type": "string",
      "description": "The author's full name",
      "maxLength": 200,
      "minLength": 1
    }
  },
  "additionalProperties": false,
  "required": [
    "title",
    "author"
  ]
}
